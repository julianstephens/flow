{
  "extends": "./node_modules/poetic/config/typescript/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2022",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "noEmit": true
  }
}
