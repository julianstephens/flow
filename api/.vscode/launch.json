  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Docker",
      "remoteRoot": "/usr/src/app/budget-tracker/api",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "restart": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Local Dev",
      "port": 9229,
      "restart": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start Local Dev",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"]
    }
  ]
}
