    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "remoteRoot": "/usr/src/app/budget-tracker",
            "restart": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug Dev",
            "port": 2345,
            "restart": true,
            "cwd": "${workspaceRoot}/api"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Dev",
            "cwd": "${workspaceRoot}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "dev"]
        }, 
    ]
}