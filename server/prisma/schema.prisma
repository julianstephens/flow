// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x", "darwin-arm64"]
}

generator tsed {
  provider = "tsed-prisma"
  output   = "../prisma/generated/tsed"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  /// @TsED.Min(1)
  id        Int      @id @default(autoincrement())
  /// @TsED.Description("User full name. Must be their legal name.")
  fullName  String   @map("full_name")
  /// @TsED.Description("User nickname.")
  shortName String   @map("short_name")
  /// @TsED.Email()
  /// @TsED.Description("User email. This email must be unique!")
  email     String   @unique
  /// @TsED.Description("User date of birth. Format: Unix Timestamp")
  dob       Int
  /// @TsED.Description("User address")
  address   Json
  /// @TsED.CollectionOf(String)
  roles     Role[]   @default([USER])
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  budgets Budget[]

  @@map("users")
}

model Budget{
  /// @TsED.Min(1)
  id        Int      @id @default(autoincrement())
  /// @TsED.Description("User full name. Must be their legal name.")
  user      User        @relation(fields: [userid], references: [id], onDelete: Cascade) 
/// @TsED.Description("User Id that connects User to Budget")
  userid    Int
/// @TsED.Description("Budget Title")
  title     String       @map("title")
 
 /// @TsED.Description("Budget Type")
  budgetType BudgetType  @default(TRADITIONAL)

/// @TsED.Description("The Active Budget")
  isActive  Boolean


/// @TsED.Description("Description")
  description String?

/// @TsED.Description("Target Budget")
  target  Decimal?


/// @TsED.Description("Target Date")
  targetDate  Int?

/// @TsED.Description("Income")
  income    Decimal?


/// @TsED.Description("Expenses")
  expenses  Decimal?


/// @TsED.Description("Catergory ID")
  catergoryMap Json?







/// @TsED.CollectionOf(String)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)
  
}

enum Role {
  USER
  ADMIN
}

enum BudgetType { 
  TRADITIONAL
  GOAL
  FIFTY_THIRTY_TWENTY
}
