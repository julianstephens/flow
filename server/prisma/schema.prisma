generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

generator tsed {
  provider           = "tsed-prisma"
  output             = "../prisma/generated/tsed"
  emitTranspiledCode = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // @TsED.Groups("group.profile", "!creation")
  id           Int       @id @default(autoincrement())
  // @TsED.Description("User full name. Must be their legal name.")
  // @TsEd.Groups("group.profile", "creation")
  fullName     String    @map("full_name")
  // @TsED.Description("User nickname.")
  // @TsEd.Groups("group.profile")
  shortName    String    @map("short_name")
  // @TsED.Email()
  // @TsED.Description("User email. This email must be unique!")
  // @TsEd.Groups("group.profile", "creation")
  email        String    @unique
  // @TsEd.Groups("group.auth", "creation")
  passwordHash String    @map("password_hash")
  // @TsEd.CollectionOf(String)
  // @TsEd.Groups("group.roles")
  roles        Role[]    @default([USER])
  // @TsEd.Groups("group.time")
  createdAt    DateTime  @default(now()) @map("created_at")
  // @TsEd.Groups("group.time")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  // @TsEd.Groups("group.deleted")
  deletedAt    DateTime? @map("deleted_at")

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
