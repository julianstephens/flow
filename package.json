{
  "name": "flow",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "start": "dotenv -- turbo run start",
    "db:generate": "dotenv -- turbo run db:generate",
    "db:migrate:deploy": "dotenv -- turbo run db:migrate:deploy",
    "db:migrate:dev": "dotenv -- turbo run db:migrate:dev",
    "db:push": "dotenv -- turbo run db:push",
    "db:seed": "dotenv -- turbo run db:seed",
    "db:studio": "dotenv -- turbo run db:studio",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "dotenv -- turbo run test",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --ext js,ts --quiet --fix --",
      "prettier --write"
    ],
    "*.{md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.15.0"
}
